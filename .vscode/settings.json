{
  // Enable formatting on save
  "editor.formatOnSave": true,

  // Set Prettier as the default formatter (global)
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Do not use ESLint as a formatter
  "eslint.format.enable": false,

  // Instead, only run ESLint auto-fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Run Prettier only when a config file exists (prevent default formatting)
  "prettier.requireConfig": true,

  // Ensure formatter is not overridden per language (safety measure if needed)
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" }
}
